<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/form.css" />
    <title><%= pageTitle%></title>
  </head>
  <body>
    
      <%- include('../includes/navigation.ejs',{authenticated:authenticated}) %>
    
   

    <div id="bg"></div>
    <main>
      <div id="content">
        <div id="content-head">
          <label>Add Item</label>
        </div>
        <form id="content-body" enctype="multipart/form-data" method="POST" action="/admin/addProduct" >
          <!-- <label>Username</label> -->
          <div>
            <input
              class="input-group"
              name="title"
              type="text"
              placeholder="Title"
            />
          </div>
          <div>
            <input
              class="input-group"
              name="image"
              type= "file"
            />
          </div>
          
          <div>
            <input
              class="input-group"
              name="price"
              type="number"
              placeholder="Price"
            />
          </div>

          <div>
            <input
              class="input-group"
              name="description"
              type="text"
              maxlength="35"
              placeholder="Description"
            />
          </div>
          
          <div>
            <!-- <input type="submit" name="submit"> -->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit">Add</button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
