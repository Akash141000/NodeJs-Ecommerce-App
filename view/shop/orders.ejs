<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/card.css" />
    <title><%= pageTitle%></title>
  </head>
  <body>  
    <%- include('../includes/navigation.ejs',{authenticated: authenticated})%>

      <main>
        <% if (prods.length > 0) { %>
        <div class="cards">
          <% prods.forEach(product => { %>
          <div class="card-body">
            <div class="card-title pad">
              <h3>Order id:<%= product._id %> </h3>
            </div>
            <hr>
            <% product.products.forEach(p => { %> 
            <div class="orderProd">
              <h5><%= p.product.title %> (<%= p.quantity %>)</h5>
            </div>
            <% }) %> 
            <div>
              <a href="/shop/orders/<%= product._id %>">Invoice</a>
              <!-- <form method="POST" action="/shop/orders">
                <input type="hidden" name="productId" value=<%= product._id %> >
                <button class="btn pad" type="submit">Delete</button>
              </form> -->
            </div>
          </div>
          <% }) %>
        </div>
        <% } else {%>
        <h1 class="err">No Products Found!</h1>
        <% } %>
      </main>
     
  </body>
  </html>