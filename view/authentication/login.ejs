<!DOCTYPE html>
<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/form.css" />
    <title><%= pageTitle%></title>
  </head>
  <body>
    <%- include('../includes/navigation.ejs',{authenticated: authenticated}) %>
    <div id="bg"></div>
    <div class="backdrop"></div>
    <main>
      <div id="content">
        <div id="content-head">
          <label>Login</label>
        </div>
        <form id="content-body" method="POST" action="/authentication/postLogin">
          <!-- <label>Username</label> -->
          <div>
            <input
              class="input-group"
              name="Email"
              type="text"
              placeholder="Email"
            />
          </div>
          <!-- <label>Password</label> -->
          <div>
            <input
              class="input-group"
              name="Password"
              type="password"
              placeholder="Password"
            />
          </div>
          <div>
            <!-- <input type="submit" name="submit"> -->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
            <button type="submit" class="btn">Login</button>
          </div>
          <% if(errorMessage) { %> 
            <div class="error">
              <%= errorMessage %> 
            </div>
          <% } %> 
        </form>
        <div class="error" >
          <a class="error" href="/authentication/reset">forgot password?</a>
        </div>
      </div>
    </main>
  </body>
</html>
